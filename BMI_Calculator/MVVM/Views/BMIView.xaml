<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:gauge="clr-namespace:Syncfusion.Maui.Gauges;assembly=Syncfusion.Maui.Gauges"
             x:Class="BMI_Calculator.MVVM.Views.BMIView"
             Title="BMIView">
    <ScrollView>
        <ScrollView.Background>
            <LinearGradientBrush EndPoint="0,1">
                <GradientStop Offset="0.0" Color="#572375"/>
                <GradientStop Offset="1" Color="#a594f9"/>
            </LinearGradientBrush>
        </ScrollView.Background>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Frame BackgroundColor="White" BorderColor="White">
                <VerticalStackLayout>
                    <Label FontSize="Large" HorizontalOptions="Center" Text="Height (cm)" TextColor="Gray"/>
                    <gauge:SfLinearGauge/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>